.page-pwd-content{
  width: 100%;
  box-sizing: border-box;
  padding-top: 100rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.page-pwd-content .pwd-block{
  width: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin-bottom: 40rpx;
}
.page-pwd-content .pwd-block.pwd1{
  margin-bottom: 0;
}
.page-pwd-content .iconfont-block{
  width: 600rpx;
  height: 80rpx;
  text-align: right;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.page-pwd-content .iconfont-block .iconfont{
  width: 100rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.txtInput{
  flex: 1;
  height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  display: block;
  letter-spacing: 10rpx;
  word-spacing: 10rpx;

}
.tips{
  font-size: 26rpx;
  color: #666;
  margin-top: 30rpx;
}
.btn-keep-pwd{
  width: 80%;
  height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
  line-height: 90rpx;
  color: #fff;
}
.message{
  color: #f00;
  font-size: 26rpx;
  line-height: 80rpx;
}
