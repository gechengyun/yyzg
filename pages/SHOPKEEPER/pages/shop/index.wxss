/* Tab */
.scroll-tab{
  display: flex;
  justify-content: space-between;
  padding: 0 26rpx;
  box-sizing: border-box;
  width: 100%;
}
.tab-header{
  width: calc(100% - 120rpx);
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
}
.tab-swiper{
  margin-right: 40rpx;
  padding-bottom: 16rpx;
  display: inline-block;
  font-size: 32rpx;
  font-weight: 400;
  font-family: PingFang-SC;  
}
.tab-swiper:first-child{
  margin-left: 0;
}
.tab-swiper:last-child{
  margin-right: 0;
}
.tab-active{
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 2px solid #fff;
}
.all-tab{
  color: #fff;
  flex-shrink: 0;
  width: 120rpx;
  text-align: right;
}
.icon-gengduo{
  margin-right: 6rpx;
}
/* Tab下拉框 */
.down-tab{
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  top: 184rpx;
  left: 0;
  z-index: 5;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 20rpx 0 20rpx;
  box-shadow: 0px 2px 4px -1px #ccc;
}
.down-tab-item{
  color: #666666;
  background-color: rgba(244,244,244,1);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  padding: 2rpx 20rpx;
  border-radius: 33rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;  
}
.down-tab-item.active{
  color: #fff;
}
