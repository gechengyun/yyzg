/* 聊天列表 */
.chat-list{
  padding: 0 30rpx;
}
.chat-item{
  padding: 30rpx 0;
  display: flex;
  border-bottom: 1px solid rgb(242,242,242);
}
.chat-item:last-child{
  border-bottom: none;
}
.chat-avatar-img{
  width: 75rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.chat-content{
  flex: 1;
}
.chat-item-t{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgb(63,63,63);
}
.chat-item-tip{
  background-color: #FC3D41;
  border-radius: 4rpx;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 6rpx;
  margin-left: 6rpx;
}
.chat-item-like{
  font-size: 24rpx;
  color: #333333;
}
.chat-item-like .icon-xihuan{
  color: rgb(234,234,234);
  margin-right: 4rpx;
}
.chat-item-liked .icon-xihuan{
  color: #FC3D41;
}
.chat-item-m{
  /* overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; */
  font-size: 30rpx;
  color: rgb(34,34,34);
  margin: 24rpx 0;
}
.chat-item-b{
  color: rgb(34,34,34);
  font-size: 24rpx;
}
/* 空数据 */
.data_null_block {
  width: 100%;
  min-height: 420rpx;
  margin: 344rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.data_null_block .tips {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(192, 196, 204, 1);
  line-height: 42rpx;
  margin-top: -50rpx;
}
.comment-empy{
  margin: 50rpx auto 0;
}