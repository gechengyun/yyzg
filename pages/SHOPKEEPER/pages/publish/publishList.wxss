/* pages/SHOPKEEPER//pages/publish/publishList.wxss */
page, .container {
  padding-bottom: 0;
  height: 100%;
}
/* 话题头部 */
.topic{
  width: 100%;
  height: 170px;
  position: relative;
  overflow: hidden;
}
.topic-img{
  width: 100%;
  height: 100%;
  background-color: #3c3c46;
}
.topic-conten{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  top: 0;
  color: #fff;
}
.go-back{
  position: absolute;
  width: 65px;
  height: 50px;
  left: 6rpx;
  top: 28rpx;
}
.topic-tex{
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 24rpx;
  width: calc(100% - 48rpx);
  letter-spacing: 4rpx;
}
.topic-name{
  font-size: 36rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.topic-symbol{
  background-color: #fff;
  color: #333;
  border-radius: 50%;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  margin-right: 12rpx;
}
.topic-des{
  font-size: 20rpx;
  padding: 13rpx 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.msg-list{
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx;
  overflow: hidden;
}
.outlist{
  border-radius: 16rpx;
  box-shadow: 0 0 5px #eaeaea;
  overflow: hidden;
  margin-top: 24rpx;
  padding-bottom: 24rpx;
  background-color: #fff;
}
.item-left{
  float: left;
  width: 340rpx;
}
.item-right{
  float: right;
  width: 340rpx;
}
.item-left .outlist:first-child,.item-right .outlist:first-child{
  margin-top: 0;
}
.img-block{
  width: 100%;
  margin-bottom: 30rpx;
  position: relative;
}
.vedio-block{
  width: 100%;
}
.video_label,image{
  width: 100%;
  vertical-align: middle;
}
.publish-status{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, .5);
}
.list-content{
  padding: 0 20rpx;
}
.list-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
}
.oprate{
  display: flex;
  justify-content: space-between;  
  color: #c0c4cc;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.oprate-right{
  display: flex;
  justify-content: flex-end;
}
.oprate-right text{
  margin-right: 2rpx;
}

.publisher{
  float: left;
  margin-right: 10rpx;
}
.publisher image{
  width: 15px;
  height: 15px;
  border-radius: 50%;
  vertical-align: sub;
  margin-right: 10rpx;
}
.publisher text{
  width: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: sub;
  display: inline-block;
}

/* 尾部提示信息 */
.end {
  color: #919398;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
}

.end text {
  margin: 0 10rpx;
}

.end::before, .end::after {
  content: '';
  display: inline-block;
  width: 100rpx;
  height: 1px;
  background-color: #919398;
  vertical-align: middle;
}
/* 空数据 */
.data_null_block {
  width: 100%;
  min-height: 420rpx;
  margin: 344rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.data_null_block .tips {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(192, 196, 204, 1);
  line-height: 42rpx;
  margin-top: -50rpx;
}