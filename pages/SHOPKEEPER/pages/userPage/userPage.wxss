/* pages/SHOPKEEPER//pages/userPage/userPage.wxss */
page, .container{
  padding-bottom: 0;
}
.register-header{
  width: 100%;
  height: 500rpx;
  position: relative;
  z-index: 1;
  box-shadow: 0 0 10rpx 5rpx #eaeaea;
}
.anchor-bg{
  position: absolute;
  z-index: -2;
  left: 0;
  top: 0;
}
.anchor-mask{
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .26);
}
.back-box{
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  z-index: 1000;
}
.icon-shangyibu{
  color:#fff;
  width:70rpx;
  text-align: left;
  left: 32rpx;
  position: fixed;
  z-index: 1001;
}
.title{
  flex: 1;
}
.anchor-hearder{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  padding-top: 80rpx;
  font-size: 34rpx;
}
.anchor-avatar{
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, .5);
  margin-bottom: 10rpx;
}
.anchor-fans{
  font-size: 28rpx;
  margin-top: 15rpx;
}
.anchor-fans text{
  margin-left: 10rpx;
}
.user-data{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.user-data .user-data-url{
  margin-left: 70rpx;
  text-align: center;
  font-size: 26rpx;
}
.user-data .user-data-url:first-child{
  margin-left: 0;
}
.user-data-num{
  font-size: 32rpx;
  font-weight: 700;
}
.anchor-about{
  font-size: 30rpx;
  color: #fff;
  border-radius: 40rpx;
  border: none;
  padding: 0 60rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.anchor-about::after {
  display: none;
}
/* Tab */
.anchor-title{
  height: 110rpx;
  width: calc(100% - 60rpx);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.fixed-nav{
  position:fixed;
  left:0;
  top: 0;
  z-index: 101;
  background-color: #f9f9f9;
}
.title-item{
  font-size: 30rpx;
  color: #333;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  flex: 1;
}
.title-item.active{
  font-weight: 600;
}
.line {
  width: 80rpx;
  height: 8rpx;
  border-radius: 6rpx;
}
/* 列表 */
.anchor-item{
  background-color: #fff;
  box-shadow: 0 0 10rpx 5rpx #eaeaea;
  margin-bottom: 20rpx;
  padding: 30rpx 0 20rpx;
  display: flex;
}
.add-time{
  color: #000;
  font-size: 36rpx;
  font-weight: 700;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
}
.add-time-mouth{
  font-size: 28rpx;
  font-weight: 400;
}
.list-l{
  flex: 1;
  padding: 0 24rpx;
}
.anchor-item:last-child{
  margin-bottom: 0;
}
.anchor-item-header{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 24rpx;
  color: #A6A6A6;
  position: relative;
}
.live-name{
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.live-time{
  font-size: 22rpx;
  color: #8D8D8D;
}
.item-header-r{
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  padding-left: 50rpx;
}
/* 菜单列表 */
.menu-list{
  position: absolute;
  right: 0;
  top: 50rpx;
  z-index: 5;
  background-color: #fff;
  border-radius: 4rpx;
  box-shadow: 1px 1px 5px 0 #999;
  font-size: 28rpx;
  color: rgb(102,102,102);
}
.menu-item{
  padding: 12rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.menu-item .iconfont{
  margin-right: 16rpx;
}
/* item */
.item-content-box{
  overflow: hidden;
  color: #C2C2C2;
  font-size: 28rpx;
}
.item-content-cloth{
  color: #333333;
  line-height: 20px;
  max-height: 40px;
  overflow: hidden;
  position: relative;
}
.item-content-dot{
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: #fff;
}
.isshowmore{
  max-height: unset;
  overflow: auto;
}
.grass-img{
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}
.grass-img image{
  width: 190rpx;
  height: 190rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.grass-img image:nth-child(3n){
  margin-right: 0;
}
.video_label{
  width: 250rpx;
  height: 250rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.video_label video{
  width: 100%;
  height: 100%;
}
/* 空数据 */
.anchor-list-empy{
  color: #5E5E5E;
  font-size: 24rpx;
  text-align: center;
  padding: 50rpx 0;
}
.anchor-list-empy image{
  width: 326rpx;
  margin-bottom: 36rpx;
}
/* 种草bottom */
.grass-bottom{
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: rgba(145,147,152,1);
}
.topping{
  margin-right: auto;
}
.grass-btn-ico{
  margin-right: 26rpx;
}
.grass-btn-ico:last-child{
  margin-right: 0;
}
.grass-btn-ico .iconfont{
  margin-right: 4rpx;
  vertical-align: middle;
}
.grass-bottom .iconfont{
  font-size: 34rpx;
}
/* 预览海报图 */
.draw-canvas{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: rgba(0, 0, 0, .6)
}
.dc-delete{
  position: absolute;
  top: 12%;
  right: 52rpx;
  z-index: 5;
  color: #fff;
  display: inline-block;
  padding: 10rpx;
  border-radius: 50%;
  background-color: rgb(8, 19, 45,.6);
}
.dc-img{
  width: 80%;
  height: 73%;
  position: absolute;
  left: 10%;
  top: 14%;
}
.dc-btn{
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  width: calc(100% - 80rpx);
}
/* 自定保存成功义弹窗 */
.gray {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
}

.gray .modal-main {
  width: 670rpx;
  min-height: 562rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0px 40px 80px 0px rgba(24, 50, 102, 0.2);
  border-radius: 16px;
  position: relative;
  margin: 450rpx auto 0;
  padding: 150rpx 80rpx 160rpx;
}

.gray .modal-main .img-top {
  width: 670rpx;
  height: 335rpx;
  position: absolute;
  top: -250rpx;
  left: 0;
}

.gray .modal-main .modal-title {
  width: 100%;
  height: 60rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: rgba(11, 16, 38, 1);
  line-height: 60rpx;
  text-align: center;
}

.gray .modal-main .modal-text {
  width: 100%;
  font-size: 32rpx;
  color: rgba(145, 147, 152, 1);
  line-height: 48rpx;
  text-align: center;
  margin-top: 20rpx;
}

.gray .modal-main .btn-close {
  width: 510rpx;
  height: 88rpx;
  background: rgba(92, 123, 254, 1);
  box-shadow: 0 12rpx 28rpx 0rpx rgba(92, 123, 254, 0.4);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 80rpx;
  left: 80rpx;
}

