/* pages/coupons/coupons.wxss */
.coupon-name{
  display: flex;
  align-items: flex-end;
  font-size: 28rpx!important;
  font-weight: 500;
  color: #EC4535;
  margin-top:25rpx;
}
.coupon-name view:nth-child(2){
  /* left: 15rpx; */
} 
.icon-youhuiquan_big {
  width: 702rpx;
  height: 150rpx;
  border:1px solid red
}
.coupon-content {
  flex:1;
}
.face_money {
  font-size: 48rpx;
  font-weight: 500;
  color: #EC4535;
  line-height: 150rpx;
  margin-left:34rpx;
  margin-right:26rpx;
}
.coupon-time {
  font-size: 18rpx;
  font-weight: 400;
  color: #EC4535;
  margin-top:10rpx;
}
.coupon-tips {
  font-size: 18rpx;
  font-weight: 400;
  color: #EC4535;
}
.coupon-status {
  width:196rpx;
  border-left:1px dashed #EC4535;
}
.coupon-status-icon {
  width: 150rpx;
  height: 70rpx;
  background: #DB1E29;
  border-radius: 8rpx;
  border: 2rpx solid #FFF4F1;
  margin: 42rpx auto;
  text-align:center;
  line-height: 70rpx;
  color: #FFFFFF;
  font-weight: 500;
  font-size: 28rpx;
}
.coupons-nouser {
  border: 2rpx solid #CCCCCC!important;
  background: #FFFFFF!important;
  color: #343434!important;
}
.nouser {
  background: #AAAAAA;
  border: 2rpx solid #FFF4F1;
}
.coupons-nouser .face_money{
  color: #343434!important;
}
.coupons-nouser .coupon-name{
  color: #343434!important;
}
.coupons-nouser .coupon-time{
  color: #343434!important;
}
.coupons-nouser .coupon-status {
  border-left:1px dashed #9D9D9D!important;
}