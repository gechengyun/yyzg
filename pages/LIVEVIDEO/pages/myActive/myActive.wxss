/* pages/LIVEVIDEO//pages/myActive/myActive.wxss */
page, .container{
  padding-bottom: 0;
}
.ac-header{
  position: fixed;
  top: 0;
  width: 0;
  width: 100%;
  z-index: 5;
  background-color: #f9f9f9;
}
.ac-tip{
  background-color: rgba(216, 58, 43,.15);
  color: #E15057;
  font-size: 24rpx;
  padding: 0 25rpx;
  height: 40px;
  display: flex;
  align-items: center;
}
/* 搜索框 */
.search-cloth{
  height: 57px;
  border-bottom: 1px solid #eaeaea;
}
.topicSearch{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  padding: 22rpx 22rpx 0;
  width: calc(100% - 48rpx);
}
.search-ipt{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #fff;
  background-color: #fff;
  border-radius: 36rpx;
  overflow: hidden;
  width: calc(100% - 30rpx);
  padding-left: 30rpx;
}
.search-ipt input{
  width: calc(100% - 50rpx);
  padding: 10rpx 0;
}
.search-pic{
  font-size: 48rpx;
  padding: 6rpx 30rpx;
}
/* 列表 */
.ac-content{
  padding: 24rpx;
}
.ac-list{
  padding: 15px;
  margin-bottom: 12px;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 5px 1px rgba(54, 49, 61, .1);
}
.ac-list:last-child{
  margin-bottom: 0;
}
.live-name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  padding: 0 0 20rpx 0;
  border-bottom: 1px solid #eaeaea;
}
.ac-time{
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}
.is-copy{
  text-decoration: underline;
  margin-left: 8rpx;
}
.ac-btn-cloth{
  border-top: 1px solid #eaeaea;
  font-size: 28rpx;
  margin-top: 15rpx;
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  color: rgba(171, 171, 171, 1);
}
.ac-btn{
  color: #fff;
  margin-left: auto;
  padding: 6rpx 26rpx;
  border-radius: 26rpx;
  background-color: rgba(212, 212, 212, 1);
}
/* 空数据 */
.anchor-list-empy{
  color: #5E5E5E;
  font-size: 24rpx;
  text-align: center;
  padding: 50rpx 0;
}
.anchor-list-empy image{
  width: 326rpx;
  margin-bottom: 36rpx;
}