}
.balance-tips{
  font-size: 22rpx;
  padding: 20rpx 0;
  background-color: #fff;
  display: flex;
}
.balance-tips text:first-child{
  margin-right: 5rpx;
  vertical-align: middle;
}
.cash-des{
  background-color: #fff ;
  margin-top: 20rpx;
  padding: 24rpx;
}
.cash-des-content{
  color: rgb(153,153,153);
  font-size: 22rpx;
  margin-bottom: 20rpx;
}
.cash-des-title{
  color: rgb(51,51,51);
  font-size: 26rpx;
  line-height: 60rpx;
}
