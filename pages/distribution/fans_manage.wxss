/* pages/distribution/fans_manage.wxss */
@import "../../wxss/new_activity_module.wxss";

.ul{
  padding: 20rpx;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  background: #fff;
  margin: 20rpx 0;
}
.ul .li{
  width: 33%;
  float: left;
  text-align: center;
  border-right: 1px solid #eee;
  padding: 10px 0
}
.ul .li:last-child{
  border-right: none;
}
.ul .li .num{
  font-size: 28rpx;
  color: #333;
}
.ul .li .title{
  color: #666;
  font-size: 27rpx;
}

.nav{width:100%; display:flex;flex-direction:row; background: #fff}
.default{ text-align:center;flex:1; color:#333; font-weight: bold; font-size:28rpx; padding: 20rpx 0;border-bottom: 1px solid #fff;}
.red{ text-align:center;color:#f46a10;flex:1; font-weight:bold;font-size:28rpx; border-bottom: 1px solid #f46a10;padding: 20rpx 0}
  
.tab_til{ line-height: 80rpx; padding: 0 10px; color: #333; display:flex;flex-direction:row; justify-content:space-between; margin-top: 20rpx; font-size: 28rpx; align-items:center;}
.tab_con{
  background: #fff; 
  width: auto;
}  
.row_tiao{
  border-top:1px solid #eee;
  height: 84rpx;
  padding: 20rpx;
  display:flex;flex-direction:row; justify-content:space-between; align-items: center;
  color: #333;
  font-size: 24rpx; 
  position: relative
}
.row_tiao .item2{
  width: 20%;
  text-align: center
}
.row_tiao .item1{
  width: 35%;
}
.row_tiao .item3{
  width: 45%;
  text-align: right
}
.row_tiao{
  min-height: 84rpx;
} 
.row_tiao1 .photo_img{
  width: 84rpx;
  height: 84rpx;
  background: #eee;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  top:20rpx;
}
.row_tiao .photo_img image{
   border-radius: 50%;
}
.row_tiao1{ 
  padding-left: 100rpx;  
} 
.tan_box{ 
  position: relative;
  z-index: 20;
  width: 86%;
  margin: 20% auto;
  background: #fff; 
  border-radius: 10rpx;
}
.tan{
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top:0;
  z-index: 29;
  width: 100%;
  height: 100%;
}
.tan_til{
  text-align: center;
  background: #f2f2f2;
  line-height: 90rpx;
  border-radius: 10rpx 10rpx 0 0;
  font-size: 30rpx;
  font-weight: bold;
  position: relative
}
.tan_box{
  padding-bottom: 40rpx;
}
.tan_con{
  padding: 0rpx  0rpx 40rpx  0rpx;
  max-height: 700rpx;
  overflow-y: scroll;
  width: auto;
}
.row_tiaoTan{
  border-top:none;
  border-bottom: 1px solid #ddd;
}
.tan_con .row_tiaoTan:last-child{
  border-bottom: none;
}
.close{
  position: absolute;
  right: 10rpx;
  top:10rpx;
  z-index: 999
}
.row_tiao.gray{
  color: #999;
  background: #f7f7f7;
}
 
.no_pro{
  color: #999;
  padding: 50rpx 0;
  font-size: 26rpx;
} 