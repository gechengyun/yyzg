/* pages/user/order/orderList.wxss */

.orderStateHeader {
    width: 100%;
    height: 160rpx;
    font-size: 0;
    background: #fff;
		-webkit-box-orient: horizontal;
}
.orderStateHeader-min{
	height: 80rpx;
}
.orderStateHeader-min .fixedHeaderSecond {
  top: 0!important;
}
.orderStateHeader .fixedHeader {
    background: #f1f1f1;
}

.orderStateHeader .fixedHeaderSecond {
    z-index: 8;
    position: fixed;
    top: 80rpx;
    left: 0;
    width: 100%;
    background: #fff;
    height: 92rpx;
		display: flex;
		flex-wrap: nowrap;
		justify-content: space-around;
}

.orderStateHeader .shopHeadButtonWrap {
    width: 100%;
    height: 80rpx;
    display: flex;
    margin: 10rpx 70rpx;
}

.orderStateHeader .shopHeadButton {
    background: #fff;
    box-sizing: border-box;
    flex: 1;
    display: flex;
    height: 60rpx;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    background: #fff;
    color: #ff5c1c;
    border-radius: 5rpx;
    margin-right: 10rpx;
}

.orderStateHeader .shopHeadButton.active {
    color: #fff;
    background: #ff5c1c;
    border-bottom: none;
}

.orderStateHeader .shopHeadButton:last-child {
    margin-right: 0;
}

