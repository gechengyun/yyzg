/* pages/user/vip/vip.wxss */

.vip-head {
  width: 100%;
  height: 315rpx;
  position: absolute;
  top: 140rpx;
  left: 0;
}

.navbar{
  position: relative;
}
.back-box{
position:absolute;
width:100%;
left:0rpx;
top:64rpx;
display:flex;
align-items:center;
box-sizing: border-box;
padding-left: 20rpx;
padding-right: 45rpx;
}
.title{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}
.img_bg {
  width: 100vw;
  height: 426rpx;
}

.vip-head-con {
  color: #f9e4ad;
  text-align: center;
}

.vip-head-con .vip-title {
  color: #f9e4ad;
  font-weight: bold;
  font-size: 40rpx;
  text-align: center;
  margin-top: 48rpx;
  margin-bottom: 20rpx;
  letter-spacing: 8rpx;
}

.vip-head-con .vip-title+view {
  font-size: 28rpx;
  color: #a49985;
}

.vip-head-con .vip-title+view>text {
  color: #595143;
}

.vip-main {
  width: 100%;
  background: #fff;
  position: relative;
  box-sizing: border-box;
  padding-top: 466rpx;
}

.vip-main .main-top {
  width: 94%;
  min-height: 466rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 30rpx 5rpx rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 3%;
  top: -84rpx;
  overflow: hidden;
}

.main-top-title {
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-top-title>view:nth-child(1) {
  font-size: 28rpx;
  color: #353535;
}

.main-top-title>view:nth-child(2) {
  font-size: 24rpx;
  color: #ccc;
}

.main-process-tip {
  width: 100%;
  text-align: center;
  color: #353535;
  font-size: 28rpx;
  font-weight: bold;
  height: 84rpx;
  line-height: 84rpx;
  background: #fff;
}

/* 进度条 */

.process-bar-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 90rpx;
}

.process-bar {
  width: 100%;
  height: 10rpx;
  background: #e7e7e7;
  position: relative;
  border-radius: 5rpx;
}
.process-bar-box.distance{
  margin-bottom: 40rpx;
}

.process-bar .process-real-box {
  width: 50%;
  height: 15rpx;
  border-radius: 8rpx;
  background: #cca973;
  position: absolute;
  left: 0;
  top: -2.5rpx;
}

.bar-bottom {
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  height: 77rpx;
  background: #fff;
}

.bar-bottom>text {
  font-size: 28rpx;
  color: #999;
}

/* 立即邀人 */

.btn-inviter {
  width: 84%;
  height: 132rpx;
  margin: 0 auto;
  position: relative;
}

.btn-inviter>image {
  width: 100%;
  height: 100%;
}

.btn-inviter .inviter-con {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  color: #fff;
  padding-left: 154rpx;
  padding-right: 25rpx;
  /* justify-content: center; */
  align-items: center;
}

.inviter-txt {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  font-style: italic;
  letter-spacing: 8rpx;
}

.circel {
  width: 90rpx;
  height: 90rpx;
  background: #efe3d7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  animation: viewlinear 2s linear infinite;
}

/* .circel>image{
  width: 100%;
} */

@keyframes viewlinear {
  /** 第一种写法**/

  0% {
    width: 90rpx;
    height: 90rpx;
  }

  50% {
    width: 110rpx;
    height: 110rpx;
  }

  100% {
    width: 90rpx;
    height: 90rpx;
  }
}

.circel>text {
  font-size: 24rpx;
  color: #353535;
}

.circel>text:nth-child(1) {
  flex-wrap: wrap;
  flex: 1;
  text-align: right;
}

.circel>text:nth-child(2) {
  width: 32rpx;
  text-align: left;
  font-size: 24rpx;
  margin-top: 2rpx;
}

/* 会员权益 */

.vip-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  margin-bottom: 150rpx;
}

.vip-box .vip-title {
  width: 342rpx;
  height: 54rpx;
  margin: 0 auto 45rpx;
  position: relative;
}

.vip-box .vip-title>image {
  width: 100%;
  height: 100;
}

.vip-box .vip-title>view {
  width: 100%;
  height: 100;
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  line-height: 54rpx;
  letter-spacing: 2rpx;
  top: 0;
  left: 0;
}

.vip-info {
  width: 100%;
  box-sizing: border-box;
  border: 11rpx solid #e4cea5;
  border-radius: 20rpx;
  text-align: justify;
  color: #353535;
  font-size: 28rpx;
  /* text-indent:56rpx; */
  box-shadow: 0 5rpx #a4763e;
 
}

.vip-info .vip-info-con {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0 7rpx #eee5d6;
  padding: 45rpx 25rpx;
   min-height: 300rpx;
}

.vip-info .vip-info-con>view {
  margin-bottom: 6rpx;
}

/* 会员专享 */

.vip {
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  margin-top: 75rpx;
}

.vip .member-title {
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.member-title .img {
  width: 40rpx;
  height: 40rpx;
}

.member-title>.title-info {
  font-size: 28rpx;
  color: #353535;
  font-weight: bold;
  padding-left: 10rpx;
  background: #fff;
  padding-right: 30rpx;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #cacaca;
}

.member-title .more {
  padding-left: 20rpx;
  display: flex;
}

.member-title .more>text {
  font-size: 24rpx;
  color: #cacaca;
  padding-left: 5rpx;
  line-height: 40rpx;
}

.goods-box {
  width: 100%;
  overflow: hidden;
  padding-top: 5rpx;
}

.shopProductList>view .productImg {
  border-radius: 15rpx 15rpx 0 0;
}

/* 商品 */

.goods_list {
  margin-bottom: 25rpx;
  box-shadow: 0 0 15rpx 5rpx rgba(217, 217, 217, 0.3);
}

.goods_list, navigator {
  width: 100%;
  height: 246rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.goods_list>navigator {
  display: flex;
}

.goods_list>navigator>image {
  width: 246rpx;
}

.goods-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 25rpx 20rpx;
}

.goods-right .goods-title {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 6rpx;
  min-height: 74rpx;
  font-weight: bold;
}

.shopProductList>view.clearfix {
  box-shadow: 0 0 15rpx 5rpx rgba(217, 217, 217, 0.3);
}

/**分享按钮**/

.sharebutton {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
}

.sharebutton .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: normal;
  background: none;
  font-size: 22rpx;
}
.sharebutton .item::after{
  border: none;
}

.sharebutton .item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  display: block;
  box-sizing: border-box;
}

.haibaoimg {
  position: fixed;
  top: 40%;
  left: 50%;
  z-index: 11111;
  transform: translate(-50%, -50%) scale(0.8);
  width: 635rpx;
  height: 1100rpx;
}

canvas {
  position: fixed;
  top: -500%;
  left: 0;
  z-index: -1;
}

.getNumer{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border: none;
  color: transparent;
  background: transparent;
  border-radius: 150rpx;
}