                </view>
                <!-- 商品描述 -->
                <view class='product-desc' wx:if='{{data.describe}}'>
                  {{item.intro}}
                </view>
                <!-- 商品价格信息 -->
                <view class='product-msg'>
                  <!-- 价格 -->
                  <view class='left'>
                    <text class='price' wx:if='{{data.price==1}}' style='color:{{themeColorValue}}'>
                  <text style='font-size:24rpx;'>￥</text>
                    <text style='font-size:28rpx;'>{{filter.transBigNumber(item.price,1)}}</text>
                    </text>
                  </view>
                  <!-- 购物袋按钮 -->
                  <view class='right' wx:if="{{data.buy_btn==1}}">
                    <text class='iconfont {{data.buy_btn_type==1?"icon-jiarugouwuche":"icon-jiahao"}}' style='color:{{themeColorValue}};font-size:{{data.buy_btn_type==1?48:40}}rpx;' catchtap="oppenShopping" wx:if='{{data.buy_btn_type<=2&&item.is_reservation*1!=1 && item.special_product_type!=98 && item.special_product_type!=97&&data.size!=4}}'
                      data-type="add_cart" data-product="{{item.product_id}}"></text>

                    <!-- 选择按钮类型3 -->
                    <!-- <view class='btn-car btn3'>购买</view> -->
                    <!-- wx:if='{{data.buy_btn_type>=4&&item.is_reservation*1!=1 && item.special_product_type!=98 && item.special_product_type!=97}}' -->
                    <view class='btn-car btn{{data.buy_btn_type}}' wx:if='{{data.size!=4}}' style='background:{{data.buy_btn_type==6?"transparent":themeColorValue}};border-color:{{data.buy_btn_type==6?themeColorValue:"none"}};color:{{data.buy_btn_type==6?themeColorValue:"#fff"}}'>{{data.buy_btn_type==4?'订购': ((data.buy_btn_type>=5&&data.buy_btn_type
