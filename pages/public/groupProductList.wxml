                <!-- 下划价格 -->
                <text style='font-size:24rpx;color:#a0a0a0;padding-left:7rpx;text-decoration: line-through' wx:if='{{item.original_price*1>0}}'>￥{{filter.transBigNumber(item.original_price,1)}}</text>
                </text>
              </view>
              <!-- 购物袋按钮 -->
              <view class='right' wx:if="{{data.buy_btn==1}}">
                <text wx:if='{{data.buy_btn_type<=2&&item.is_reservation*1!=1 && item.special_product_type!=98 && item.special_product_type!=97&&data.size!=4 &&(item.self_by_get_money=="0.00"||storeData.show_gift_preincome=="0")}}' class='iconfont {{data.buy_btn_type==1?"icon-jiarugouwuche":"icon-jiahao"}}' style='color:{{themeColorValue}};font-size:{{data.buy_btn_type==1?48:40}}rpx;' catchtap="oppenShopping" 
                  data-type="add_cart" data-product="{{item.product_id}}"></text>
                <view wx:if='{{data.buy_btn_type<=2&&item.is_reservation*1!=1 && item.special_product_type!=98 && item.special_product_type!=97&&data.size!=4 &&item.self_by_get_money!=="0.00"&&storeData.show_gift_preincome=="1"&&item.is_fx*1==1&&storeData.show_gift*1==1}}' style='position:relative'>
