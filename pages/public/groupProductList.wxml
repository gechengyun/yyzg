      <view wx:if='{{content.product_list.length>0}}' class="clearfix grouplist goods_box menu-style{{data.menu_style?data.menu_style:0}} box-radius{{data.pic_angle?data.pic_angle:0}}" wx:for="{{content.product_list}}" wx:key="index">
