/* pages/SPELL/pages/newTeam/newTeam.wxss */

page {
  background: #f8f8f8;
}

.newTit {
  margin-top: 20rpx;
  width: 100%;
  height: 330rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
}

.newTit .titTop {
  width: 100%;
  height: 166rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  background: #fff;
  color: #999;
  border-bottom: 1rpx solid #ededed;
}

.newTit .head {
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
   margin-right: 20rpx;
}

.newTit .head image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
 
}

.newTit .teamName {
  height: 160rpx;
  padding: 20rpx 0;
  line-height: 60rpx;
  font-size: 28rpx;
}

.newList .item .item_tit {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #999;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.newList .item .top {
  height: 160rpx;
  padding: 20rpx 0;
  line-height: 60rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #ebebeb;
  background: #fff;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.newList .item .item_member {
  background: #fff;
}

.newList .item .top .item_top_tit {
  color: #666;
  font-size: 24rpx;
}

.newList .item .top .item_member {
  color: #000;
  font-size: 26rpx;
  font-weight: 400;
}

.newList .item .bottom {
  /* height: 160rpx; */
  padding: 20rpx 0;
  line-height: 60rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.newList .item .bottom .item_top_tit {
  color: #666;
  font-size: 24rpx;
}

.item_member textarea{
  margin-bottom: 20rpx;
  width: 96%;
  height: 150rpx;
  border-right: 10rpx;
  background: #efefef;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx
}
.foot button {
  width: 440rpx;
  height: 90rpx;
  background: #197ffd;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  margin: 0 auto;
   margin-top: 30rpx;
  border-radius: 60rpx;
}
