/* pages/user/information/information.wxss */
.info {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: #F3F4F5;
}
.avatar {
  margin-top: 56rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  align-content: center;
}
.ava-img {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin: 0 auto;
  /* background: #fff; */
}
.ava-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #2B2F36;
  margin-top:18rpx;
}
.content {
  width: 702rpx;
  height: 328rpx;
  background: #FEFFFF;
  box-shadow: 10rpx 10rpx 16rpx 0rpx rgba(218, 218, 218, 0.5);
  border-radius: 8rpx;
  margin: 40rpx auto;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.cont-item {
  display: flex;
  flex-wrap: nowrap;
  height: 108rpx;
  border-bottom: 1px solid #EDEDED;
  line-height: 108rpx;
  font-size: 28rpx;
}
.cont-item:last-child{
  border:none!important
}
  
.left {
  font-weight: 500;
  color: #2B2F36;
  width: 116rpx;
}
.right {
  margin-left:54rpx;
  color: #4C4C4C;
}
.input {
  height: 108rpx;
  line-height: 108rpx;
}
.man {
  padding-right: 82rpx;
}
.btn {
  width: 696rpx;
  height: 80rpx;
  background: #DB1E29;
  border-radius: 8rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom: 90rpx;
  left: 30rpx;
}