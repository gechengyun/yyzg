/* pages/USERS/pages/opinion/opinion.wxss */
.opinion {
  width: 100%;
  margin-bottom: -20rpx;
  background: #fff;
}

.opinion .section.title {
  display: flex;
  align-items: center;
  height: 84rpx;
  padding-left: 24rpx;
  font-size: 22rpx;
  color: #767676;
  font-weight: 400;
  background-color: #F9F9F9;
}

.opinion .section .single-item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 84rpx;
  padding-left: 24rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.opinion .section .single-item:last-child {
  border: none;
}

.opinion .section .single-item .name {
  margin-right: 38rpx;
  color: #1f1f1f;
  font-size: 26rpx;
  font-weight: 400;
}

.opinion .section .single-item .right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.opinion .section .single-item .desc {
  color: #7d7d7d;
  font-size: 26rpx;
  font-weight: 400;
}

.opinion .section .single-item .radio {
  float: right;
  margin-right: 34rpx;
}

.opinion .section .placeholder {
  color: #767676;
  font-size: 24rpx;
  font-weight: 400;
}

.opinion .section .textarea {
  box-sizing: border-box;
  width: 100%;
  height: 316rpx!important;
  padding: 38rpx 24rpx;
  font-size: 26rpx;
  color: #1f1f1f;
}

.opinion .section.phone {
  display: flex;
  align-items: center;
  height: 84rpx;
}

.opinion .section.phone .text {
  margin-left: 24rpx;
  color: #767676;
  font-size: 24rpx;
  font-weight: 400;
}

.opinion .section.phone .tel {
  text-indent: 10rpx;
  color: #1f1f1f;
  font-size: 28rpx;
}

.opinion .section.phone .seperator {
  display: inline-block;
  width: 2rpx;
  height: 24rpx;
  margin: 0 16rpx 0 26rpx;
  background-color: #e5e5e5;
}
.opinion .section.phone .placeholder {
  color: #767676;
  font-size: 24rpx;
  font-weight: 400;
}

.opinion .section.upload .upload-btn {
  box-sizing: border-box;
  display: inline-block;
  width: 153rpx;
  height: 153rpx;
  /* margin: 8rpx 22rpx 0; */
  background: #f2f2f2 url("https://yiyang-website.oss-cn-hangzhou.aliyuncs.com/yywechat/upload.png") no-repeat center/cover;
}

.opinion .btn {
  box-sizing: border-box;
  width: 700rpx;
  height: 80rpx;
  margin: 0 25rpx 25rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500rpx;
  background-color: #DB1E29;
}

.opinion .bottom {
  padding-top: 144rpx;
  padding-bottom: 254rpx;
}
.addImgList {
  display: flex;
  flex-wrap: wrap;
  margin: 8rpx 22rpx 0;
}
.addImgList view {
  width: 153rpx;
  height: 153rpx;
  font-size: 100rpx;
  color: #ccc;
  line-height: 114rpx;
  text-align: center;
  border: 1rpx solid;
  margin-right:10rpx;
}
.addImgList view  image {
  width: 153rpx;
  height: 153rpx;
}
.addImgItem {
  position: relative;
}
.deletImg {
  position: absolute;
  top:0;
  right:0;
  z-index: 1;
  width:40rpx!important;
  height:40rpx!important;
}