.ems .status {
  display: flex;
  align-items: center;
  width: 700rpx;
  height: 100rpx;
  margin: 12rpx auto;
  text-indent: 26rpx;
  border-radius: 8rpx;
  background-color: #fff;
}

.ems .status .text {
  color: #474747;
  font-size: 42rpx;
  font-weight: 400;
}

.ems .deliver {
  width: 700rpx;
  margin: 0 auto;
  background-color: #fff;}

.ems .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  margin: 14rpx 0 0;
  text-indent: 26rpx;
  background: linear-gradient(315deg, #FFFAFA 0%, #FFF4F4 100%);
  border-radius: 8rpx;
}

.ems .info .merchants {
  color: #474747;
  font-size: 29rpx;
  font-weight: 400;
}

.ems .info .copy {
  margin-right: 26rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #ED4E3D;
}

.ems .tree {
  box-sizing: border-box;
  min-height: 766rpx;
  padding: 22rpx;
}

.ems .tree .item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.ems .tree .item .datetime {
  display: flex;
  flex-direction: column;
  width: 180rpx;
  height: 100%;
  flex: 0 0 180rpx;
}

.ems .tree .item .datetime .date {
  color: #474747;
  font-size: 29rpx;
}

.ems .tree .item .datetime .time {
  margin-top: 10rpx;
  color: #828282;
  font-size: 24rpx;
}

.ems .tree .item .seperator {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  margin-right: 10rpx;
}

.ems .tree .item .seperator .dot {
  position: relative;
  top: 8rpx;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  flex: 0 0 24rpx;
  border-radius: 50%;
  background: linear-gradient(293deg, #F4715E 0%, #EE5443 100%);
}

.ems .tree .item .seperator .line {
  position: relative;
  top: 8rpx;
  display: inline-block;
  width: 2rpx;
  height: 100%;
  border-left: 2rpx dashed #ccc;
}

.ems .tree .item .seperator .line::after {
  position: absolute;
  top: 100%;
  left: 0;
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 8rpx;
  border-left: 2rpx dashed #ccc;
}

.ems .tree .item .information {
  box-sizing: border-box;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  padding-bottom: 50rpx;
  padding-left: 20rpx;
  line-height: 1.5;
  border-left: 2rpx dashed #ccc;
}

.ems .tree .item:last-child .information {
  border: none;
}

.ems .tree .item .information::before {
  position: absolute;
  top: 0rpx;
  left: -14rpx;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  flex: 0 0 24rpx;
  border-radius: 50%;
  content: '';
  background: linear-gradient(293deg, #F4715E 0%, #EE5443 100%);
}

.ems .tree .item .information .sta {
  font-size: 29rpx;
  color: #474747;
}

.ems .tree .item .information .detail {
  position: relative;
  top: -2rpx;
  font-size: 24rpx;
  color: #474747;
}
.noDate {
  text-align: center;
  color: #474747;
  margin-top:40rpx;
}