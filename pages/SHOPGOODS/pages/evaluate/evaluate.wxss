/* pages/SHOPGOODS/pages/evaluate/evaluate.wxss */
.evaluate-page {
  position: fixed;
  width:100%;
  height: 100vh;
  background: #F2F2F2;
}
.evaluateTitle {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.evaluateTitle-item {
  padding: 6rpx 26rpx;
  background: #FFFFFF;
  border-radius: 29px;
  font-size: 24rpx;
  font-weight: 400;
  color: #232323;
  margin-left: 36rpx;
  margin-top:38rpx;
}
.evaluateTitle-item:nth-last-child(1) {
  margin-right: 0rpx;
}
.active {
  background: #DA2026!important;
  color: #FFFFFF!important;
}
.evaluateItem {
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 8px;
  margin: 0 auto;
  margin-bottom:12rpx;
  padding: 26rpx 34rpx 42rpx 34rpx;
  box-sizing: border-box;
}
.eva-img {
  display: flex;
  flex-wrap: nowrap;
}
.eva-avatar {
  width: 64rpx;
  height: 64rpx;
  background: #D8D8D8;
  border: 2px solid #979797;
  border-radius: 50%;
}
.nickname {
  font-size: 28rpx;
  font-weight: 400;
  color: #232323;
}
.eva-desc {
  margin-left: 10rpx;
  margin-top: 8rpx;
}
.aixin {
  width: 24rpx;
  height: 22rpx;
  margin-right: 5rpx;
}
.eva-time {
  font-size: 20rpx;
  color: #999999;
  margin-top:14rpx;
}
.eva-content {
  font-size: 24rpx;
  font-weight: 400;
  color: #2B2F36;
  margin-top:14rpx;
}
.evaluateImg {
  margin-top: 20rpx
}
.evaluateImg view image {
  width: 204rpx;
  height: 207rpx;
  float: left;
  margin-right: 2rpx;
  margin-top:10rpx;
}
.evaluateTitleList {
  padding-bottom: 50rpx;
}
.time-gg {
  border-left: 1px solid #D6D6D6;
  padding-left: 18rpx;
}
.eva-date {
  padding-right: 15rpx;
}