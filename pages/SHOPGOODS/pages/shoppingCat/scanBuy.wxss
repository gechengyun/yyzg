/* 扫码提示弹窗 */

.gray {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
}

.gray .modal-main {
  width: 590rpx;
  min-height: 562rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0px 40px 80px 0px rgba(24, 50, 102, 0.2);
  border-radius: 16px;
  position: relative;
  margin: 215rpx auto 0;
  padding: 150rpx 50rpx 160rpx;
}

.scan-gray .modal-main {
  padding: 60rpx 50rpx 50rpx;
}

.gray .modal-main .img-top {
  width: 590rpx;
  height: 335rpx;
  position: absolute;
  top: -250rpx;
  left: 0;
}

.gray .modal-main .modal-title {
  width: 100%;
  height: 60rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(11, 16, 38, 1);
  line-height: 60rpx;
  text-align: center;
}

.gray .modal-main .modal-text {
  width: 100%;
  font-size: 32rpx;
  color: rgba(145, 147, 152, 1);
  line-height: 48rpx;
  text-align: center;
  margin-top: 40rpx;
}

.scan-gray .modal-main .modal-text {
  border-bottom: 1px solid rgb(233, 233, 233);
  margin: 105rpx 0;
  color: rgb(226, 226, 226);
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  width: calc(100% - 40rpx);
}

.scan-gray .modal-main .modal-text input {
  text-align: left;
  width: 85%;
  color: #333;
}

.btn-scan {
  display: flex;
  justify-content: space-between;
}

.btn-scan button {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  box-shadow: 0 12rpx 28rpx 0rpx rgba(92, 123, 254, 0.4);
}

.btn-scan button::after {
  border: none;
}

.btn-cancle {
  background-color: rgb(217, 217, 217);
}

.gray .modal-main .btn-close {
  width: 490rpx;
  height: 88rpx;
  background: rgba(92, 123, 254, 1);
  box-shadow: 0 12rpx 28rpx 0rpx rgba(92, 123, 254, 0.4);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 80rpx;
  left: 50rpx;
}

