/* pages/user/myCollection/index.wxss */
/* 方块布局 */
.orderStateList .orderList2{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 30rpx;
  width: calc(100% - 60rpx);
}
.orderContent2{
  position: relative;
  width: calc(100%/3 - 40rpx/3);
  height: 320rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0 0 13rpx rgba(0,0,0,0.13);
}
.orderContent2:nth-child(3n){
  margin-right: 0;
}
.orderStateList.myCollection .orderContent2 .orderContentList{
  padding: 0;
}
.orderStateList.myCollection .orderContent2 .productImg {
  width: 100%;
  height: 220rpx;
  padding: 0;
  display: inline-block;
  vertical-align: top;
}
.orderStateList .orderContent2 .productInfo {
  width: calc(100% - 20rpx);
  padding: 0 10rpx;
}
.orderStateList .orderContent .productInfo .productName text{
  width: 100%;
  text-align: left;
}
.icon-correct{
  position: absolute;
  font-size: 28rpx;
  right: 12rpx;
  top: 12rpx;
  z-index: 15;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 6rpx 8rpx;
  background-color: rgba(150,150,150,.5);
}
.choose-goods{
  background-color: #49a5ff;
  border: none;
  padding: 8rpx 10rpx;
}

.open-submit{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 60rpx);
  height: 60px;
  padding: 0 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  box-shadow: 0 1px 9px rgba(200,200,200,0.31);
}
.choose-num{
  font-size: 32rpx;
  color: rgb(51,51,51);
}
.choose-num text{
  color: rgb(59,134,235);
  margin: 0 10rpx;
}
.sub-btn{
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  height: 60rpx;
  color: #fff;
  margin: 0;
  padding: 16rpx 26rpx;
  font-size: 30rpx;
}
.sub-btn-hover::after{  
  border: none;
  background-color: rgb(0, 0, 0,.2);
  border-radius: 0;
}
/* 空数据 */
.data_null_block {
  width: 100%;
  min-height: 420rpx;
  margin: 344rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.data_null_block .tips {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(192, 196, 204, 1);
  line-height: 42rpx;
  margin-top: -50rpx;
}

.orderStateList .orderContent .productInfo .productPrice text{
  float: left;
  font-size: 24rpx;
}