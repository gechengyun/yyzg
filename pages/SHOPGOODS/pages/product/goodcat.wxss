/* pages/product/productList.wxss */
.productTop .productTopFiexd{
  position: absolute;
}

.search_area { position: relative; width: 100%; height: 90rpx; background-color: #DA2026; }

.search_area .input-icon { position: absolute; top: 12rpx; height: 66rpx; width: 70rpx; left: 18rpx; background-color: #FEFEFE; border-top-left-radius: 10rpx; border-bottom-left-radius: 10rpx; color: rgba(1, 1, 1, 0.29); }

.search_area .input-icon text { display: block; width: 66rpx; margin-top: 8rpx; text-align: center; font-size: 50rpx; vertical-align: middle; }

.search_area input { position: absolute; top: 12rpx; height: 66rpx; width: 574rpx; left: 84rpx; background-color: #FEFEFE; border-top-right-radius: 10rpx; border-bottom-right-radius: 10rpx; font-size: 30rpx; }

.search_area image { position: absolute; right: 15rpx; top: 16rpx; width: 60rpx; height: 60rpx; color: #ffffff; }

.search_area.blackTheme { background-image: linear-gradient(0deg, #343434 0%, #000000 100%), linear-gradient(#000000, #000000); }

/* .search_area.redTheme { background-image: linear-gradient(0deg, #FA0058 0%, #FA0029 100%), linear-gradient(#000000, #000000); } */

.search_area.orangeTheme { background-image: linear-gradient(0deg, #FF9328 0%, #FF5C1C 100%), linear-gradient(#000000, #000000); }

.search_area.blueTheme { background-image: linear-gradient(0deg, #06E3F8 0%, #0098F8 100%), linear-gradient(#000000, #000000); }

.search_area.pinkDarkTheme { background-image: linear-gradient(0deg, #FF5FCB 0%, #FF007C 100%), linear-gradient(#000000, #000000); }

.search_area.purpleTheme { background-image: linear-gradient(0deg, #CAA0FD 0%, #7948FD 100%), linear-gradient(#000000, #000000); }

.search_area.brownTheme { background-image: linear-gradient(0deg, #B6B7AB 0%, #B7A392 100%), linear-gradient(#000000, #000000); }