.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/

.drawer_box {
    width: 76%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    background: #fafafa;
    margin: -150px 12% 0 12%;
    border-radius: 3px;
}

.drawer_title {
    padding: 15px;
    text-align: center;
    background-color: gazure;
}

.drawer_content {
    padding: 15rpx;
    overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.title {
    height: 30px;
    line-height: 30px;
    width: 160rpx;
    text-align: center;
    display: inline-block;
    font: 300 28rpx/30px "microsoft yahei";
}

.text {
    color: black;
}

.sureQuery {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: white;
}

.btn {
    width: 100%;
    text-align: center;
    border-radius: 0;
    border-top: 1px solid #dddddd;
    border-right: 1px solid #dddddd;
}
.btn:nth-child(2n){
    border-right: none;
}

.btn:active {
    width: 100%;
    text-align: center;
}

.btnSure {
    color: #1aad19;
}

.titleMsg {
    font-size: 30rpx;
    color: #666666;
    text-align: center;
    display: block;
}

.input_base {
    padding-top: 3px;
    padding-bottom: 3px;
    max-block-size: 10;
    display: block;
    background-color: white;
    margin-top: 45px;
    border: 2rpx solid #ccc;
    padding-left: 20rpx;
    margin-right: 10%;
    border-radius: 3px;
    margin-left: 10%;
}